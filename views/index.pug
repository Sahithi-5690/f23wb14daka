extends layout

block content
  h1= title
  p My name is SaiSahithi Daka. All call me Sahithi.
  button(class="btn btn-warning", onclick = "goFaster()") Press Me
  br
  br
  div(id="faster") <i>Increase the speed.</i>
  br
  br
  script.
    let mph = 20;
    let change = 1;
    function goFaster(){
      mph += change;
      change += 1;
      let result = document.getElementById("faster");

      result.innerHTML = "MPH " + mph + " with change" + change;
    }